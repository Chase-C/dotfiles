# =========
#  General
# =========

# Modifier: LGUI
set $mod Mod4
#set $mod Mod1

font DejaVu Sans Mono Nerd Font 10

# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l

# Preferred terminal emulator
set $term alacritty

# Switching to active workspace moves to previous one
workspace_auto_back_and_forth yes

# Workspace names
set $ws1  "1"
set $ws2  "2"
set $ws3  "3"
set $ws4  "4"
set $ws5  "5"
set $ws6  "6"
set $ws7  "7"
set $ws8  "8"
set $ws9  "9"
set $ws10 "10"
set $wsff ""
set $wssp ""
set $wsst ""
set $wsds "ﭮ"
set $wsmg ""

# Mouse doesn't affect focus
focus_follows_mouse no
mouse_warping none

# Hide edge borders
hide_edge_borders none
smart_gaps on
gaps inner 2

# Start graphical authentication agent
exec /usr/bin/lxqt-policykit-agent

# Start mako (notification daemon) and udiskie (automount usb devices)
exec mako &
exec udiskie -f '' &

# Use redshift to adjust screen gamma at night
exec redshift -l 36.982628:-122.023484 &

# Start monitoring pacman
exec ~/bin/notifyupdates &

# ======================
#  Output configuration
# ======================

# Desktop Output
output DP-4 {
    background ~/Pictures/wallpaper/wavy-hexagons.png center
}

