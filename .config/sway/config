    #background ~/Pictures/Backgrounds/Small\ Memory.jpg fill
}

output DP-4 {
    #background ~/Pictures/Backgrounds/abstract_squares.jpg fill
}

output DP-5 {
    #background ~/Pictures/Backgrounds/abstract_desert.jpg fill
}

