#  Input configuration
# =====================

input type:keyboard {
    xkb_options ctrl:nocaps
}

input type:touchpad {
    accel_profile       adaptive
    drag                enabled
    dwt                 enabled
    middle_emulation    enabled
    natural_scroll      enabled
    pointer_accel       0.25
    scroll_factor       0.5
    tap                 enabled
    tap_button_map      lmr
}

